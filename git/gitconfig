[alias]
  st = status -s
  lg = log --pretty=format:'%Cgreen%h%Creset -%C(yellow)%d%Creset %s %Cblue(%ad %an)%Creset' --abbrev-commit --date=relative
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lgd = "!git lg --date=short"
  graph = "!git lg --graph"
  tree = "!git graph --all"
  co = checkout
  ci = commit -v
  br = branch
  undo = reset HEAD~1 --mixed
  st = status -s
[color]
  ui = auto
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[diff]
  tool = meld
[help]
  autocorrect = 10
